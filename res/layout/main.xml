<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper" >

    <Button
        android:id="@+id/btnRelax"
        android:layout_width="167dp"
        android:layout_height="216dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_relax"
        android:onClick="onClick" />

    <ImageView
        android:id="@+id/imgTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/title" />

    <Button
        android:id="@+id/btnClassic"
        android:layout_width="167dp"
        android:layout_height="216dp"
        android:layout_alignBaseline="@+id/btnRelax"
        android:layout_alignBottom="@+id/btnRelax"
        android:layout_centerVertical="true"
        android:layout_marginRight="30dp"
        android:layout_toLeftOf="@+id/btnRelax"
        android:background="@drawable/ic_classic"
        android:onClick="onClick" />

    <Button
        android:id="@+id/btnTimeAttack"
        android:layout_width="167dp"
        android:layout_height="216dp"
        android:layout_alignBaseline="@+id/btnRelax"
        android:layout_alignBottom="@+id/btnRelax"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/btnRelax"
        android:background="@drawable/ic_time_attack"
        android:onClick="onClick" />

</RelativeLayout>