<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.puzzle"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />

    <application
        android:icon="@drawable/ic_puzzle"
        android:label="@string/app_name" >
        
        
        <activity
            android:name=".ClassicMainActivity"
            android:screenOrientation="landscape"
            android:label="Classic puzzle game" 
    		android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >            
        </activity>
        
        <activity
            android:name=".RelaxImageActivity"
            android:screenOrientation="landscape"
            android:label="Relax puzzle game" 
    		android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >            
        </activity>
        
        <activity
            android:name=".RelaxDifficultyActivity"
            android:screenOrientation="landscape"
            android:label="Relax puzzle game" 
    		android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >            
        </activity>
        
        <activity
            android:name=".TimeAttackMainActivity"
            android:screenOrientation="landscape"
            android:label="Time attack puzzle game"
    		android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >            
        </activity>
        
         <activity
            android:name=".GameActivity"
            android:screenOrientation="landscape"
            android:label="Classic select level screen"
    		android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >            
        </activity>
        
        <activity
            android:name=".RelaxGameActivity"
            android:screenOrientation="landscape"
            android:label="Relax select picture screen"
    		android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >            
        </activity>
                
        <activity
            android:name=".PicturePuzzleActivity"
            android:label="@string/app_name" 
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>